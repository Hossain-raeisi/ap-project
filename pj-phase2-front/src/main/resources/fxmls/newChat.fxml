<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="front.app.fxml_controllers.NewChat">

    <fx:include source="header.fxml" />
   <ListView fx:id="contactsList" layoutX="53.0" layoutY="229.0" prefHeight="800.0" prefWidth="500.0" />
   <Label layoutX="53.0" layoutY="190.0" text="Your contacts:">
      <font>
         <Font name="System Bold Italic" size="24.0" />
      </font>
   </Label>
   <TextArea fx:id="messageField" layoutX="578.0" layoutY="229.0" prefHeight="222.0" prefWidth="931.0" promptText="enter ur message" />
   <Button fx:id="sendToAllButton" layoutX="578.0" layoutY="458.0" mnemonicParsing="false" onAction="#sendToAllButtonAction" text="send to all" />
   <Button fx:id="sendToButton" layoutX="689.0" layoutY="458.0" mnemonicParsing="false" onAction="#sendToButtonAction" text="send to:" />
