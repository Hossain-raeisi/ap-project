   <Label layoutX="669.0" layoutY="462.0" text="or">
      <font>
         <Font size="14.0" />
      </font>
   </Label>
   <Button fx:id="newContactButton" layoutX="578.0" layoutY="498.0" mnemonicParsing="false" onAction="#newContactButtonAction" text="request new contact " />
   <TextField fx:id="newContactNationalIdField" layoutX="748.0" layoutY="498.0" promptText="new contact national id" />


</AnchorPane>
